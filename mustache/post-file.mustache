<figure class="post-file">
  <figcaption class="post-file-info">
    <span class="post-file-info-item post-file-dims">{{ TWidth }}Ã—{{ THeight }}</span>
    <span class="post-file-info-item post-file-size">{{ Size }}</span>
    {{#HasLength}}
      <span class="post-file-info-item post-file-length">{{ Length }}</span>
    {{/HasLength}}{{#HasTitle}}
      <span class="post-file-info-item post-file-title" title="{{ Title }}">{{ Title }}</span>
    {{/HasTitle}}
  </figcaption>
  <a class="post-file-link" href="{{ SourcePath }}" target="_blank">
    <img class="post-file-thumb" src="{{ ThumbPath }}" width="{{ Width }}" height="{{ Height }}">
  </a>
</figure>
